<div class="row">
    <div class="col-lg-12">
        <div class="page-header">
        </div>
        <div class="bs-component">
            <section id="login">
                <h1>Login</h1>
                <div id="fb-root"></div>
                    {{#if (messages)}}
                        <div class="alert alert-danger">Invalid Login</div>
                    {{else}}
                        <div class="alert alert-primary">Please enter your credentials</div>
                    {{/if}}
                    <form method="post">
                        <fieldset class="form-group">
                            <label for="username" class="col-sm-2 control-label">Username: </label>
                            <input name="username" id="username" required />
                        </fieldset>
                        <fieldset class="form-group">
                            <label for="password" class="col-sm-2 control-label">Password: </label>
                            <input name="password" id="password" type="password" required />
                        </fieldset>
                        <fieldset class="form-group">
                            <button class="btn btn-primary offset-2">Login</button>
                            <a class="btn btn-outline-dark" href="/google" role="button" style="text-transform:none">
                                <img width="20px" style="margin-bottom:3px; margin-right:5px;" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
                                Login with Google
                            </a>
<!--                            <a class="btn btn-outline-dark" href="/github" role="button" style="text-transform:none">-->
<!--                                <img width="20px" style="margin-bottom:3px; margin-right:5px;" src="../public/images/github.png" />-->
<!--                            </a>-->
                        </fieldset>
                        <fieldset>
                            <hr />
                            Need an account?
                            <a href="/register" title="Register">Register</a>
                        </fieldset>
                    </form>
            </section>
        </div>
    </div>
</div>
