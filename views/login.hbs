<h1>Login</h1>
<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0&appId=238544547519529&autoLogAppEvents=1"></script>
{{#if (messages)}}
    <div class="alert alert-danger">
        Invalid Login
    </div>
{{else}}
    <div class="alert alert-info">
        Please enter your credentials
    </div>
{{/if}}



<form method="post">
    <fieldset class="form-group">
        <label for="username" class="col-sm-2 control-label">Username: *</label>
        <input name="username" id="username" required />
    </fieldset>
    <fieldset class="form-group">
        <label for="password" class="col-sm-2 control-label">Password: *</label>
        <input name="password" id="password" type="password" required />
    </fieldset>
    <fieldset class="form-group">
        <button class="btn btn-primary offset-2">Login</button>
    </fieldset>
    <fieldset>
        <div class="fb-login-button offset-2" data-width="" data-size="large" data-button-type="continue_with" data-layout="default" data-auto-logout-link="false" data-use-continue-as="true"></div>
        <hr />
        Need an account?  <a href="/register" title="Register">Register</a>
    </fieldset>
</form>
