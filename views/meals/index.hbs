<div class="row">
    <div class="col-lg-12">
        <div class="page-header"></div>
        <div class="bs-component">
            <section class="et-slide" id="about">
                <h1>Your Meals</h1>
                {{#if user}}
                    <a href="/meals/add">Add a New Meal</a>
                {{/if}}
                <table class="table table-striped table-hover">
                    <thead>
                    <th>Meal</th>
                    <th>Type</th>
                    {{#if user}}
                        <th> </th>
                    {{/if}}
                    </thead>
                    <!-- loop thru meals to display each -->
                    {{#each meals}}
                        <tr>
                            <td>
                                {{#if ../user }} <!-- can edit if user is logged in -->
                                    <a href="/meals/edit/{{this._id}}">{{this.name}}</a>
                                {{else}} <!-- if anonymous read-only -->
                                    {{this.name}}
                                {{/if}}
                            </td>
                            <td>{{this.mealType}}</td>
                            {{#if ../user}} <!-- can delete if user is logged in -->
                                <td>
                                    <a href="/meals/delete/{{this._id}}" class="text-danger" onclick="return confirmDelete();">Delete</a>
                                </td>
                            {{/if}}
                        </tr>
                    {{/each}}
                </table>
            </section>
        </div>
    </div>
</div>